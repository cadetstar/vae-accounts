<table>
  <tr>
    <th>ID</th>
    <th>Department Code</th>
    <th>Name</th>
    <th>Short Name</th>
    <th>City, State</th>
    <th>Manager</th>
    <th>Supervisor</th>
    <th>Supervising Department</th>
    <th>Commands</th>
  </tr>
  <% @departments.each do |d| %>
      <tr class="<%= cycle('odd','even') %>">
        <td><%= d.id %></td>
        <td><%= d.code %></td>
        <td><%= d.name %></td>
        <td><%= d.short_name %></td>
        <td><%= d.city_and_state %></td>
        <td><%= d.manager %></td>
        <td><%= d.supervisor %></td>
        <td><%= d.supervising_department %></td>
        <td><%= link_to 'Edit', edit_department_path(d) %> &middot; <%= link_to 'Destroy', d, :method => "delete", :confirm => 'Are you sure?' %></td>
      </tr>
  <% end %>
</table>

<div class='new_item'>
  <%= link_to 'New Department', new_department_path %>
</div>